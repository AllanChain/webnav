{
    "$id": "/config",
    "type": "object",
    "required": [
        "bgImg",
        "blackText",
        "cors",
        "barColor",
        "httpIcon",
        "locale",
        "dark",
        "linkPreviewKey"
    ],
    "additionalProperties": false,
    "properties": {
        "bgImg": {
            "type": "object",
            "required": [
                "url",
                "filter"
            ],
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string"
                },
                "filter": {
                    "type": "object",
                    "required": [
                        "blur",
                        "blurColor",
                        "contrast",
                        "grayscale"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "blur": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 10
                        },
                        "blurColor": {
                            "type": "string",
                            "pattern": "^#([\\da-fA-F]{3}){1,2}$"
                        },
                        "contrast": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 200
                        },
                        "grayscale": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 100
                        }
                    }
                }
            }
        },
        "blackText": {
            "type": "boolean"
        },
        "cors": {
            "description": "CORS proxy",
            "type": "string"
        },
        "barColor": {
            "type": "string",
            "pattern": "^#([\\da-fA-F]{3}){1,2}$"
        },
        "httpIcon": {
            "type": "boolean"
        },
        "locale": {
            "type": "string"
        },
        "dark": {
            "type": "boolean"
        },
        "linkPreviewKey": {
            "type": "string"
        }
    }
}
